<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#0f1115">
  <title>AI Media Studio</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

<header class="header">
  <a href="/" class="logo">AI Media Studio</a>
  <div class="header-actions">
    <button id="search-toggle" class="icon-btn">ğŸ”</button>
    <button id="settings-toggle" class="icon-btn">âš™ï¸</button>
  </div>
</header>

<!-- SEARCH -->
<div id="search-container" class="search-container">
  <input id="search-input" class="search-box" placeholder="Search tools...">
</div>

<!-- CATEGORIES -->
<div class="categories">
  <button class="pill active">All Tools</button>
  <% categories.forEach(cat => { %>
    <button class="pill"><%= cat %></button>
  <% }) %>
</div>

<% const featuredTools = tools.filter(t => t.featured); %>
<% const normalTools = tools.filter(t => !t.featured); %>

<!-- FEATURED -->
<% if (featuredTools.length > 0) { %>
<h2 class="section-title">ğŸ”¥ Featured</h2>
<div class="tool-list">
  <% featuredTools.forEach(tool => { %>
    <div class="tool-card"
      data-title="<%= tool.title.toLowerCase() %>"
      data-category="<%= tool.category %>"
      data-url="/tool/<%= tool.slug %>"
      tabindex="0"
      role="button"
    >
      <div>
        <h3>
          <%= tool.icon %> <%= tool.title %>
          <% if (tool.badge) { %>
            <span class="badge <%= tool.badge.toLowerCase() %>">
              <%= tool.badge %>
            </span>
          <% } %>
        </h3>
        <p><%= tool.description %></p>
      </div>
    </div>
  <% }) %>
</div>
<% } %>

<!-- ALL TOOLS -->
<h2 class="section-title">All Tools</h2>
<div class="tool-list">
  <% normalTools.forEach(tool => { %>
    <div class="tool-card"
      data-title="<%= tool.title.toLowerCase() %>"
      data-category="<%= tool.category %>"
      data-url="/tool/<%= tool.slug %>"
      tabindex="0"
      role="button"
    >
      <div>
        <h3>
          <%= tool.icon %> <%= tool.title %>
          <% if (tool.badge) { %>
            <span class="badge <%= tool.badge.toLowerCase() %>">
              <%= tool.badge %>
            </span>
          <% } %>
        </h3>
        <p><%= tool.description %></p>
      </div>
    </div>
  <% }) %>
</div>

<!-- SETTINGS OVERLAY -->
<div id="settings-overlay" class="settings-overlay">
  <div class="settings-content">

    <div class="settings-header">
      <h2>Settings</h2>
      <button id="close-settings" class="icon-btn">âœ–</button>
    </div>

    <div class="settings-section">
      <label class="toggle-row">
        <span>Dark Mode</span>
        <input type="checkbox" id="dark-mode-toggle">
      </label>
    </div>

  </div>
</div>

<script src="/script.js"></script>
</body>
</html>
