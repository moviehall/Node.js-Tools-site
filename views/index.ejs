<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#0f1115">
  <title>AI Media Studio</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

<header class="header">
  <a href="/" class="logo">AI Media Studio</a>
  <button id="search-toggle" class="icon-btn">ğŸ”</button>
</header>

<!-- Search (hidden by default) -->
<div id="search-container" class="search-container">
  <input id="search-input" class="search-box" placeholder="Search tools... e.g. upscaler">
</div>

<!-- Categories -->
<div class="categories">
  <button class="pill active">All Tools</button>
  <% categories.forEach(cat => { %>
    <button class="pill"><%= cat %></button>
  <% }) %>
</div>

<!-- Tool List -->
<div class="tool-list">
  <% tools.forEach(tool => { %>
    <div class="tool-card"
      data-title="<%= tool.title.toLowerCase() %>"
      data-category="<%= tool.category %>"
      data-url="/tool/<%= tool.slug %>"
      tabindex="0"
      role="button"
    >
      <div>
        <h3>
          <%= tool.icon %> <%= tool.title %>
          <% if (tool.trending) { %>
            <span class="badge">Trending</span>
          <% } %>
        </h3>
        <p><%= tool.description %></p>
      </div>
    </div>
  <% }) %>
</div>

<script src="/script.js"></script>
</body>
</html>
