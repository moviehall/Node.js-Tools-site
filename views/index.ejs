<!DOCTYPE html>
<html>
<head>
  <title>AI Media Studio</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

<header class="header">
  <div class="logo">AI Media Studio</div>
  <input id="search-input" class="search" placeholder="Search tools...">
</header>

<!-- Auto Categories -->
<div class="categories">
  <button class="pill active">All Tools</button>
  <% categories.forEach(cat => { %>
    <button class="pill"><%= cat %></button>
  <% }) %>
</div>

<!-- Featured Section -->
<% const featuredTools = tools.filter(t => t.featured); %>
<% if (featuredTools.length > 0) { %>
  <h2 class="section-title">ðŸ”¥ Featured</h2>
  <div class="tool-list">
    <% featuredTools.forEach(tool => { %>
      <div class="tool-card"
        data-title="<%= tool.title.toLowerCase() %>"
        data-category="<%= tool.category %>">

        <div>
          <h3>
            <%= tool.icon %> <%= tool.title %>
            <% if (tool.trending) { %>
              <span class="badge">Trending</span>
            <% } %>
          </h3>
          <p><%= tool.description %></p>
        </div>

        <a href="/tool/<%= tool.slug %>" class="action-btn">
          Open
        </a>
      </div>
    <% }) %>
  </div>
<% } %>

<h2 class="section-title">All Tools</h2>

<div class="tool-list">
  <% tools.forEach(tool => { %>
    <div class="tool-card"
      data-title="<%= tool.title.toLowerCase() %>"
      data-category="<%= tool.category %>">

      <div>
        <h3>
          <%= tool.icon %> <%= tool.title %>
          <% if (tool.trending) { %>
            <span class="badge">Trending</span>
          <% } %>
        </h3>
        <p><%= tool.description %></p>
      </div>

      <a href="/tool/<%= tool.slug %>" class="action-btn">
        Open
      </a>
    </div>
  <% }) %>
</div>

<script src="/script.js"></script>
</body>
</html>
